# ========================================
# üåç VARI√ÅVEIS DE AMBIENTE - DESENVOLVIMENTO
# ========================================
# Arquivo para desenvolvimento local
# Copie este arquivo para .env.development e configure suas vari√°veis

# ========================================
# üîß CONFIGURA√á√ïES B√ÅSICAS
# ========================================
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# ========================================
# üóÑÔ∏è BANCO DE DADOS - DESENVOLVIMENTO LOCAL
# ========================================
# PostgreSQL local para desenvolvimento
DATABASE_URL=postgresql://postgres:postgres123@localhost:5432/backend_db_dev?schema=public

# Configura√ß√µes individuais do PostgreSQL
POSTGRES_DB=backend_db_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123

# ========================================
# üîê AUTENTICA√á√ÉO JWT
# ========================================
JWT_SECRET=dev-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=dev-super-secret-refresh-key-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRY=1h
JWT_REFRESH_TOKEN_EXPIRY=30d

# ========================================
# üî¥ REDIS CACHE
# ========================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ========================================
# üìß CONFIGURA√á√ïES SMTP
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@yourcompany.com
SMTP_SECURE=false

# ========================================
# üì° CONFIGURA√á√ïES MQTT
# ========================================
MQTT_HOST=mqtt://groupwork-smart.com:1883
MQTT_USERNAME=your_mqtt_username
MQTT_PASSWORD=your_mqtt_password
MQTT_PROTOCOL=mqtt
MQTT_PORT=1883
MQTT_CLIENT_ID=backend-api-dev

# ========================================
# üîí CONFIGURA√á√ïES DE SEGURAN√áA
# ========================================
BCRYPT_ROUNDS=12
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# ‚òÅÔ∏è GOOGLE CLOUD SQL (DESABILITADO)
# ========================================
# Para desenvolvimento local, Cloud SQL est√° desabilitado
USE_CLOUD_SQL=false
INSTANCE_CONNECTION_NAME=

# ========================================
# üìä CONFIGURA√á√ïES DE LOGGING
# ========================================
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_FILE_PATH=./logs/app-dev.log
LOG_MAX_SIZE=20m
LOG_MAX_FILES=7

# ========================================
# üåê CONFIGURA√á√ïES DE REDE
# ========================================
SOCKET_CORS_ORIGIN=http://localhost:3000
SOCKET_PING_TIMEOUT=60000
SOCKET_PING_INTERVAL=25000

# ========================================
# üîç CONFIGURA√á√ïES DE MONITORAMENTO
# ========================================
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_RETRIES=3

# ========================================
# üìÅ CONFIGURA√á√ïES DE ARQUIVOS
# ========================================
UPLOAD_MAX_SIZE=10mb
UPLOAD_PATH=./uploads
TEMP_PATH=./temp

# ========================================
# üß™ CONFIGURA√á√ïES DE TESTE
# ========================================
TEST_DATABASE_URL=postgresql://postgres:postgres123@localhost:5432/backend_db_test
TEST_REDIS_URL=redis://localhost:6379/1

# ========================================
# üîß CONFIGURA√á√ïES DE DESENVOLVIMENTO
# ========================================
# Debug habilitado para desenvolvimento
DEBUG=true
ENABLE_PROFILING=true
PROFILING_PORT=3001

# Hot reload
NODEMON_ENABLED=true
